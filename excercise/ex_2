# trójkat

a = 10
b = 12
c = 8
h = 6

obwod = a + b + c #sum(a,b,c)
pole = 1/2 * a * h

print("Pole trójkąta wynosi" + str(pole)+"a obwód wynosi"+str(obwod))

# romb

a = 6
h = 3

pole = a * h
obwod = 4 * a

print("Pole ormbu wynosi" + str(pole)+"a obwod wynosi"+str(obwod))

# prostokąt

x = 6
y = 8

obwod = 2 * x + 2 * y
pole = x * y

print("Pole prostokąta wynosi" + str(pole)+"a obwód wynosi"+str(obwod))